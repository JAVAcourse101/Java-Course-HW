import java.util.Scanner;

public class Rectangle {
	
	 public static void main(String[] args) {
		 
		 Scanner input = new Scanner(System.in, "UTF-8");
		 
		 System.out.println("Let`s calculate the area of an rectangle.");
		 System.out.println("Please enter the lenght of side A:");
		 double sideA = input.nextDouble();
		 System.out.println("Please enter the lenght of side B:");
		 double sideB = input.nextDouble();
		 
		 double area= sideA*sideB;
		 
		 
		 System.out.println("The lenght of side A you have entered is :" + sideA);
	        System.out.println("The lenght of side B you have entered is :" + sideB);
	        System.out.println("The AREA of the rectangle is :" + area);
	        
	 }

}
