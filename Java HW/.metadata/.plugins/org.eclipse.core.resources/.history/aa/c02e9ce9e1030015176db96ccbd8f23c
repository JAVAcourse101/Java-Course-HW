import java.util.Scanner;


public class count {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in,"UTF-8");
		
		System.out.println("Plesase enter a sentance");
		String sen=input.nextLine();
		
		System.out.println("Plesase enter a word");
		String word=input.nextLine();
		

		
		countwords(sen,word);
		input.close();

	}

	
	private static void countwords(String sen, String word) {
		int index = sen.indexOf("\\b" + word + "\\b");
		int count = 0;
		while (index != -1) {
		    count++;
		    sen = sen.substring(index + 1);
		    index = sen.indexOf("is");
		}
		System.out.println("No of *is* in the input is : " + count);
		}
	}

