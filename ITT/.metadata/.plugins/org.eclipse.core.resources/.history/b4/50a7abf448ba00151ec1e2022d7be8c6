package task_1;

public class SimpleNotePad implements INotepad {
	private Page [] pages;
	
	public SimpleNotePad(int pages) {
		if (pages<0) {
			pages=DEFAULT_NUMBER_OF_PAGES;
		}
		this.pages=new Page[pages];
		for (int i = 0; i < this.pages.length; i++) {
			this.pages[i]=new Page();
		}
	}

