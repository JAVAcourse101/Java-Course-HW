import java.util.Arrays;

public class SelectionSort {

	public static void main(String[] args) {
		int[] a = { 1, 8, 9, 7, 25, 2, 3, 10, 4, 54, 64, 5, 213, 16, 53, 12,
				99, 3, 513, 21, 53, 26 };

		System.out.println(Arrays.toString(selSort(a)));

	}

	static int[] selSort(int[] a) {

		for (int j = 0; j < a.length; j++) {

			int max = a[0];
			int maxIndex = 0;
			
			int min = a[0];
			int minIndex = 0;

			for (int i = j; i < a.length - j; i++) {

				if (a[i] > max) {
					max = a[i];
					maxIndex = i;
				}
				
				if (a[i] < min) {
					min = a[i];
					minIndex = i;
				}

			}

			int temp = a[a.length - j - 1];
			a[a.length - j - 1] = a[maxIndex];
			a[maxIndex] = temp;
			
			if(a[maxIndex]<a[minIndex]){
				minIndex=maxIndex;
			}
			
			int temp1 = a[j];
			a[j] = a[minIndex];
			a[minIndex] = temp1;
			
			
		}
		return a;

	}
}
