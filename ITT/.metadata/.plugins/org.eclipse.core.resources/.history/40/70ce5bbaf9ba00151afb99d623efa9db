package task_1;

import java.util.Scanner;

public abstract class SecuredNotePad extends NotePad implements INotepad {
	String passWord;

	public SecuredNotePad(int pages) {
		super(pages);
		Scanner sc = new Scanner(System.in);
		System.err.println("Please enter a password for the Secured NotePad");
		String pass = sc.next();
		if (pass != null && pass.length() > 0) {
			this.passWord = pass;
		}
		sc.close();
	}

	public boolean checkPass() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter the password");
		String pass = sc.next();
		sc.close();
		if (this.passWord.equals(pass)) {
			return true;

		}
		System.err.println("Wrong Pass");
		return false;

	}

