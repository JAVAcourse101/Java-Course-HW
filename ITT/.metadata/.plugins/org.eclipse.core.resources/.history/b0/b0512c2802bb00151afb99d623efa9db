package task_1;

import java.util.Scanner;

public class SecuredNotePad extends NotePad implements INotepad {
	String passWord;

	private SecuredNotePad(int pages,String password) {
		super(pages);
	}

	public boolean checkPass() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter the password");
		String pass = sc.next();
		
		if (this.passWord.equals(pass)) {
			sc.close();
			return true;

		}
		System.err.println("Wrong Pass");
		sc.close();
		return false;

	}

	public static SecuredNotePad createSecuredNotePad(int pages) {
		Scanner sc = new Scanner(System.in);

		System.err.println("Please enter a password for the Secured NotePad");
		String pass = sc.next();
		sc.close();
		if (pass != null && pass.length() > 0) {
			SecuredNotePad sNP = new SecuredNotePad(pages,pass) {
				
			};
			return sNP;
		}
		return null;

	}

	@Override
	public void printAllPages() {
		this.checkPass();
		super.printAllPages();
		
	}
	
	@Override
	public void searchWord(String word) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void printAllPagesWithdigits() {
		// TODO Auto-generated method stub
		
	}

}
