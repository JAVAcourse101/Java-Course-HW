package War;

public class Player {
	private String name;
	private Deck playersDeck;

	Player(String name) {
		this.name = name;
		this.setPlayersDeck(new Deck());
	}

	public Deck getPlayersDeck() {
		return playersDeck;
	}

	public void setPlayersDeck(Deck playersDeck) {
		this.playersDeck = playersDeck;
	}
}
