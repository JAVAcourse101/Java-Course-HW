import java.util.Scanner;

public class Task_2 {

	public static void main(String[] args) {
		System.out.println("Please enter two words 5-20 symbols long");
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Please enter the first word");
		String first = sc.nextLine();
		first = first.trim();

		System.out.println("Please enter the second word");
		String second = sc.nextLine();
		second = second.trim();

		if ((first.length() < 5) || (first.length() > 20)
				|| (second.length() < 5) || (second.length() > 20)) {
			System.out.println("one of the words is not 5-20 symbols long");
			sc.close();
			return;

		}

		if (first.length() > second.length()) {
			System.out.print(first.length() + " ");
			for (int i = 0; i < first.length(); i++) {

				if (i < second.length()) {
					System.out.print(second.charAt(i));
				} else {
					System.out.print(first.charAt(i));
				}
			}
		}

		if (first.length() < second.length()) {
			System.out.print(second.length() + " ");
			for (int i = 0; i < second.length(); i++) {

				if (i < first.length()) {
					System.out.print(first.charAt(i));
				} else {
					System.out.print(second.charAt(i));
				}
			}
		}
		sc.close();
	}

}
