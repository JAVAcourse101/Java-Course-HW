			SecuredNotePad sNP = new SecuredNotePad(pages) {
				
				@Override
				public void searchWord(String word) {
					// TODO Auto-generated method stub
					
				}
				
				@Override
				public void printAllPagesWithdigits() {
					// TODO Auto-generated method stub
					
				}
			};
		}
		sc.close();
	}
	

}
