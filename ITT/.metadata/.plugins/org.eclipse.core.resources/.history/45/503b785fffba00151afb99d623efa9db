package task_1;

import java.util.Scanner;

public abstract class SecuredNotePad extends NotePad implements INotepad {
	String passWord;

	private SecuredNotePad(int pages) {
		super(pages);
	}

	public boolean checkPass() {
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter the password");
		String pass = sc.next();
		sc.close();
		if (this.passWord.equals(pass)) {
			return true;

		}
		System.err.println("Wrong Pass");
		return false;

	}


