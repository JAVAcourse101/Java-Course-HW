				continue;

			}
			// if(str.charAt(i-1)==' ' && str.charAt(i+1)!=' '){
			// System.out.print(" "+Character.toUpperCase(str.charAt(i)));
			// continue;
			// }
			// else{
			// System.out.print(str.charAt(i));
			// }

		}

	}

}
