import java.util.Scanner;

public class five {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out
				.println("Please enter an array of whole numbers, but for doing that first tell me how long do you want it to be");
		int l = sc.nextInt();

		int[] arr = new int[l];
		System.out.println("Now let us start enetering the array");

		for (int i = 0; i < l; i++) {
			arr[i] = sc.nextInt();

		}
		for (int j = 0; j < l; j++) {
			System.out.print(arr[j] + ",");

		}
		
		int  minThree= Integer.MIN_VALUE;
		
		for (int m = 0; m < l; m++) {
			if((arr[m]%3==0)&&(arr[m]<minThree)){
				minThree=arr[m];				
			}

		}
		
		if(minThree==Integer.MIN_VALUE){
			System.out.println("Sorry in the entered array there are no numbers that can be divided by three with no leftover");
		}
		else{
			System.out.println("The smallest number in the array that can be devided by three is : "+minThree);
		}
		
	}

}
